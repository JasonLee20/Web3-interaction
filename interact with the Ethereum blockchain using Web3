// Import web3
const Web3 = require('web3');

// Connect to the Ethereum network (this is the URL for the mainnet, you can replace it with a testnet or localhost if you are running a local node)
const web3 = new Web3('https://mainnet.infura.io/v3/YOUR-PROJECT-ID');

// The Ethereum address that we want to check
const address = '0x742d35Cc6634C0532925a3b844Bc454e4438f44e';

web3.eth.getBalance(address, (err, wei) => {
    // handle error if there is one
    if(err) {
        console.error("An error occurred: "+err);
    }
    else {
        // convert the balance from Wei to Ether and print
        console.log('Balance:', web3.utils.fromWei(wei, 'ether'));
    }
});
